//-Layout Base
extends ../templates/base.pug

//-Etiqueta Title
block title
	-var interna = 'modulos';
	title Editar Módulo

//-Etiqueta Metadescription
block description
	meta(name="editarModulo", content="Editar Modulo" )


block content
	section.container-fluid.cont-menu-internas
		div.row.col-row-menu
			include ../templates/partials/menu.pug


	section.container-fluid.alto-page
		//-Nombre Usuario
		div.row
			include ../templates/partials/header-user.pug
		//-Contenedor
		div.row
			//-Titulos
			article.col-general
				div.cont-titulos-generales
					h4 editar módulo

				//-Contenido
				div.cont-contenido-detalle

					div.col-contenido
						form(method="POST")
							div.col-form-login
								div.form-group
									input(type="text" required)
									label(for="nombre-modulo")
										|Nombre

					//-Formulario
					form.col-contenido-doble(action="editar-modulo")
						div.col-form-doble
							div.col-form-user
								div.cont-select.form-group
									select(for="estado" required)
										option(value="" disabled selected) Estado
										option(value="1") 002
										option(value="2") 003
										option(value="3") 004
										option(value="4") 005

						div.col-form-doble
							div.col-form-user
								div.cont-select.form-group
									select(for="perfil" required)
										option(value="" disabled selected) Perfil
										option(value="1") 002
										option(value="2") 003
										option(value="3") 004
										option(value="4") 005
					
						//-boton
						button.col-btn-user.btn-general(type="submit")
							|editar módulo
		
		//-Volver
		div.row
			div.cont-btn-volver
				a(href="modulos.html").btn-volver-general
					span.glyphicon.glyphicon-chevron-left
					</br>volver

		//- VALIDATE
		div.cont-message-feedback.success(style="display:none")
			a.btn-close-feed(href="#")
				span.glyphicon.glyphicon-remove

			p.text-feedback
				|Registro exitoso


