//-Layout Base
extends ../templates/base.pug

//-Etiqueta Title
block title
	-var interna = 'archivos';
	title Editar archivo

//-Etiqueta Metadescription
block description
	meta(name="editarArchivo", content="Editar Archivo" )


block content
	section.container-fluid.cont-menu-internas
		div.row.col-row-menu
			include ../templates/partials/menu.pug


	section.container-fluid.alto-page
		//-Nombre Usuario
		div.row
			include ../templates/partials/header-user.pug
		//-Contenedor
		div.row
			//-Titulos
			article.col-general
				div.cont-titulos-generales
					h4 editar archivo

				//-Contenido
				div.cont-contenido-detalle

					//-Formulario
					form.col-contenido-doble(method="POST")
						div.col-form-doble
							div.col-form-user
								div.form-group
									input(type="text" required)
									label(for="subtitulo")
										|Subtitulo

							div.col-form-user
								div.form-group
									input(type="text" required)
									label(for="descripcion")
										|Descripción

						div.col-form-doble
							div.col-form-user
								div.form-group
									input(type="text" required)
									label(for="texto-alternativo")
										|Texto alternativo

							div.col-form-user
								div.cont-select.form-group
									select(for="tipo" required)
										option(value="" disabled selected) Tipo
										option(value="1") 002
										option(value="2") 003
										option(value="3") 004
										option(value="4") 005
					
						//-boton
						button.col-btn-user.btn-general(type="submit")
								|editar archivo
		
		//-Volver
		div.row
			div.cont-btn-volver
				a(href="archivos.html").btn-volver-general
					span.glyphicon.glyphicon-chevron-left
					</br>volver
					
		//- VALIDATE
		div.cont-message-feedback.success(style="display:none")
			a.btn-close-feed(href="#")
				span.glyphicon.glyphicon-remove

			p.text-feedback
				|Registro exitoso


