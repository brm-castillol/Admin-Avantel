//-Layout Base
extends ../templates/base.pug

//-Etiqueta Title
block title
	-var interna = 'seccion';
	title Secciones

//-Etiqueta Metadescription
block description
	meta(name="secciones", content="Secciones" )


block content
	section.container-fluid.cont-menu-internas
		div.row.col-row-menu
			include ../templates/partials/menu.pug


	section.container-fluid.alto-page
		//-Nombre Usuario
		div.row
			include ../templates/partials/header-user.pug
		//-Contenedor
		div.row
			//-Titulos
			article.col-general
				div.cont-titulos-generales
					h4 sección

				//-Contenido
				div.cont-contenido-detalle
					table.table.col-cont-listas-cortas.listas-seccion
						thead
							tr
								th
									|Ruta	
								th
									|Titulo
								th.accion-corta
									|Estado						
						
						tbody
							tr
								td
									|Jbarrera	
								td
									|Julian
								td.accion-corta
									div.cont-iconos-accion
										a(href="configurar-seccion.html")
											span.glyphicon.glyphicon-cog
										a
											span.glyphicon.glyphicon-trash
										a(href="editar-seccion.html")
											span.glyphicon.glyphicon-pencil

							tr
								td
									|Jbarrera	
								td
									|Julian
								td.accion-corta

									div.cont-iconos-accion
										a
											span.glyphicon.glyphicon-trash
										a(href="editar-seccion.html")
											span.glyphicon.glyphicon-pencil


				div.clear
				div.cont-btns-general
					div.cont-btn-guardar.col-btn-static
						a.btn-guardar-general
							span.glyphicon.glyphicon-floppy-disk
							</br>guardar

					div.cont-btn-crear
						a(href="crear-seccion.html").btn-crear-general
							span.glyphicon.glyphicon-plus
							</br>Crear sección
							
		//-Volver
		div.row
			div.cont-btn-volver
				a(href="index.html").btn-volver-general
					span.glyphicon.glyphicon-chevron-left
					</br>volver


