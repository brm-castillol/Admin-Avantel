						//-Formulario-login
						form(action="login")
							div.col-form-login
								div.form-group
									input(type="text" required)
									label(for="usuario")
										|Usuario/Correo electrónico
									

							div.col-form-login
								div.form-group
									input(type="text" required)
									label(for="password")
										|Contraseña

							button.col-form-login.btn-general(type="submit")
								|iniciar sesión

							div.col-form-login.conte-text-olvide
