//-Etiqueta Metadescription
block description
	meta(name="description", content="Frontend BRM" )


block content
	section.container-fluid
		div.row
			include ../templates/partials/menu.pug


	section.container-fluid.alto-page
		//-Nombre Usuario
		div.row
			include ../templates/partials/header-user.pug
		//-Contenedor
		div.row
			//-Titulos
			article.col-general
				div.cont-titulos-generales
					h4 crear contenido

				//-Contenido
				div.cont-contenido-detalle
		
					div.col-contenido
						form(method="POST")
							div.col-form-login
								div.form-group
									input(type="text" required)
									label(for="nombre-contenido")
										|Nombre contenido

										
							//-boton
							button.col-form-login.btn-general(type="submit")
									|crear contenido
			
				//-Volver
		div.row
			div.cont-btn-volver
				a(href="contenidos.html").btn-volver-general
					span.glyphicon.glyphicon-chevron-left
					</br>volver


