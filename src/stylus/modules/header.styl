.col-logo
	display inline-block
	max-width 14rem

.col-titulo-principal
	display inline-block

.container-cerrar-sesion
	float right
	margin-top 10px
	text-align center


//Menu
.cont-menu-admin
	margin-top 36px
	
	li
		display inline-block
		height 70px
		margin-right 12px
		text-align center
		width 70px
		
		&:last-child
			margin-right 0
		
		a
			border 1px solid $gris
			color $gris
			cursor pointer
			display block
			font-family $light
			font-size 1.2rem
			height 70px
			text-decoration none
			width 70px
			
			span.glyphicon
				font-size 2.7rem
				margin-top 16px
			
			&:hover
				background $magenta
				border none
				color $blanco
			
		&.active
			background $magenta
			color $blanco
			
			a
				color $blanco
				border 1px solid $magenta
				
			
			
				
		
		
	
